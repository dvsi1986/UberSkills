<script type="text/javascript">
  function addSkill(){
    var skill = $('#skills').val();
    $.post( "/users/addSkill", { skill:skill })
      .done(function( data ) {
        location.reload();
    });
  } 
  function removeSkill(skill){
    $.post( "/users/removeSkill", { skill:skill })
      .done(function( data ) {
        location.reload();
    });
  }
  function addEducation(){
    var name = $('#college_name').val();
    var from = $('#college_from').val();
    var to = $('#college_to').val();
    var subject = $('#college_subject').val();
    var gpa = $('#college_gpa').val();
    $.post( "/users/addEducation", { name:name,from:from,to:to,subject:subject,gpa:gpa })
      .done(function( data ) {
        location.reload();
    });
  } 
  function removeEducation(name){
    $.post( "/users/removeEducation", { name:name })
      .done(function( data ) {
        location.reload();
    });
  }
  function addExperience(){
    var name = $('#work_name').val();
    var from = $('#work_from').val();
    var to = $('#work_to').val();
    var position = $('#work_position').val();
    var description = $('#description').val();
    $.post( "/users/addExperience", { name:name,from:from,to:to,position:position,description:description })
      .done(function( data ) {
        location.reload();
    });
  } 
  function removeExperience(name){
    $.post( "/users/removeExperience", { name:name })
      .done(function( data ) {
        location.reload();
    });
  }
  $(document).ready(function() {
    $('#skills').keydown(function(event){
      if(event.keyCode == 13) {
        event.preventDefault();
        addSkill();
      }
    });
  });
  $(document).ready(function() {
    $('#college_name,#college_to,#college_from,#college_subject,#college_gpa').keydown(function(event){
      if(event.keyCode == 13) {
        event.preventDefault();
        addEducation();
      }
    });
  }); 
  $(document).ready(function() {
    $('#work_name,#work_to,#work_from,#work_position,#description').keydown(function(event){
      if(event.keyCode == 13) {
        event.preventDefault();
        addExperience();
      }
    });
  }); 
</script>
