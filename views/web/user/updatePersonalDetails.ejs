  <div class="container" style="margin-top:80px; padding:20px;">
   <% if(reg_success.length>0){ %>
    <div class="row clearfix">
      <div class="col-md-12 column">
        <div class="alert alert-success alert-dismissable" style="background:none;color:#33DD33">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <%= reg_success[0] %>
        </div>
      </div>
    </div>
    <% } %>
    <% if(reg_error.length>0){ %>
    <div class="row clearfix">
      <div class="col-md-12 column">
        <div class="alert alert-danger alert-dismissable" style="color:#DD0000;background:none;">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <%= reg_error[0] %>
        </div>
      </div>
    </div>
    <% } %>
    <div class="row clearfix">
      <div class="col-md-6 column">
      <h1>Personal Details</h1>
        <form role="form" id="data" enctype="multipart/form-data" method="POST" action="/users/address">
        <style>
          .form-group{
            padding:1.5%;
          }
        </style>
          <div class="form-group">
             <label for="dob">Date of Birth</label><input type="date" value="<%=moment(user.dob).format('YYYY-MM-DD')%>" class="form-control" name='dob' autofocus id="dob" placeholder="Date of Birth">
          </div>
          <div class="form-group">
             <label for="profile">Upload Profile Pic</label><input type="file" class="form-control" name='profile' id="profile">
             <a href="uploads/profile/<%= user.profile.name %>">Download <i style="text-decoration:none;" class="fa fa-download"></i></a>
          </div>
          <div class="form-group" style="padding-left:0px;margin-left:0px;">
                <label for="description">Brief Description About Yourself:</label><br>
                <textarea class="form-control" rows="5" style="width:100%;" name="description" id="description"><%=user.summary%></textarea>
              </div>
          <h4>Address</h4>
          <div class="form-group">
             <label for="line1">Line 1</label><input type="text" value="<%= user.address.line1 %>" class="form-control" name='line1' id="line1" placeholder="Line 1">
          </div>
          <div class="form-group">
             <label for="line2">Line 2</label><input type="text" value="<%= user.address.line2 %>" class="form-control" name='line2' id="line2" placeholder="Line 2">
          </div>
          <div class="form-group">
             <label for="city">City</label><input type="text" value="<%= user.address.city %>" class="form-control" name='city' id="city" placeholder="City">
          </div>
          <div class="form-group">
             <label for="state">State</label><input type="text" value="<%= user.address.state %>" class="form-control" name='state' id="state" placeholder="State">
          </div>
          <div class="form-group">
             <label for="country">Country</label><input type="text" value="<%= user.address.country %>" class="form-control" name='country' id="country" placeholder="Country">
          </div>
          <div class="form-group">
             <label for="pin">PIN/ZIP</label><input type="text" value="<%= user.address.pin %>" class="form-control" name='pin' id="pin" placeholder="PIN/ZIP">
          </div>
          <button type="submit" class="btn btn-default" style="width:50%;">Update</button>
        </form>
      </div>
      <div class="col-md-6 column">
      </div>
    </div>
  </div>
